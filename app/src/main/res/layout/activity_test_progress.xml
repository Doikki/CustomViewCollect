<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dueeeke.customviewcollect.progress.TestProgressActivity">

    <com.dueeeke.customviewcollect.progress.CircleProgressBar
        android:id="@+id/rpb_f"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:ring_color="#ff0000"
        app:ring_progress_color="#ff0000"
        app:ring_max_progress="100"
        app:ring_stroke_width="4dp"
        app:ring_text_color="#ff0000"
        app:ring_text_size="16sp"
        app:ring_style="fill"/>

    <com.dueeeke.customviewcollect.progress.CircleProgressBar
        android:id="@+id/rpb_s"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:ring_color="@android:color/darker_gray"
        app:ring_progress_color="#ff0000"
        app:ring_max_progress="100"
        app:ring_stroke_width="8dp"
        app:ring_text_color="#ff0000"
        app:ring_text_size="16sp"
        app:ring_style="stroke"/>

</LinearLayout>