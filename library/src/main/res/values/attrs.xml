<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepView">
        <attr name="innerColor" format="color" />
        <attr name="outerColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="stepTextColor" format="color" />
        <attr name="stepTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ColorTrackTextView">
        <attr name="originalColor" format="color" />
        <attr name="trackColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AlphabetIndexView">
        <attr name="selectedColor" format="color" />
        <attr name="normalColor" format="color" />
        <attr name="alphabetSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LikeView">
        <attr name="imageSize" format="dimension"/>
        <attr name="imageSrc" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">

        <attr name="ring_max_progress" format="integer"/>
        <attr name="ring_color" format="color"/>
        <attr name="ring_progress_color" format="color"/>
        <attr name="ring_stroke_width" format="dimension"/>
        <attr name="ring_text_size" format="dimension"/>
        <attr name="ring_text_color" format="color"/>
        <attr name="ring_style">
            <enum name="fill" value="0"/>
            <enum name="stroke" value="1"/>
        </attr>
    </declare-styleable>
</resources>